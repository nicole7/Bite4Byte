<li>
<div class="container" >
<h2 class = "form-signin-heading">Search Recipes</h2>

  <% if @errors %>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% else %>
    <ul style="list-style-type:none">
        <li>Recipe name: <%= @recipe.recipe %></li><br>
        <li><%= image(@recipe.image, size: "50x50") %></li>
        <li>Recipe label: <%= @recipe.label %></li><br>
        <li>Recipe cautions: <%= @activity.cautions %></li><br>
        <li>Recipe ingredientLines: <%= @recipe.ingredientLines %></li><br>
        <li>Recipe ingredients: <%= @recipe.ingredients %></li><br>
        <li>Recipe totalNutrients: <%= @recipe.totalNutrients %></li><br>
        <li>Recipe bookmarked: <%= @recipe.bookmarked %></li><br>

        <li><%= link_to "Visit Recipe Page", @recipe.url %></li><br>
    </ul>
  <% end %>
</div>
</li>

