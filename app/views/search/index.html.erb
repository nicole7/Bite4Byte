<h2 class = "form-signin-heading">Search Recipes</h2>

  <% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>


<%= form_tag search_path, method: "get" do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search" %>
<% end %>

<% if @recipes.present? %>
  <% @recipes.each do |recipe| %>
    <p><%= recipe.label %></p>
  <% end %>
<% end %>