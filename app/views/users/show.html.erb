<div class="container">
  <h1><%= current_user.first_name %>'s Profile Page</h1>
  <% if current_user.recipes.nil? %>
    <%= "You do not have any recipes yet."%> <a class="nav-link" href="/recipes/new">Upload</a> <%="or"%> <a class="nav-link" href="/search/index">search</a> <%="for some!" %>
  <% else %>
    <% current_user.recipes.each do |recipe| %>
      <%= recipe %>
    <% end %>
  <% end %>
</div>

